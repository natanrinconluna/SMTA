{
    "version": "0.2.0",
    "compounds": [
      { "name": "Dev (API+WEB)", "configurations": ["API", "WEB"] }
    ],
    "configurations": [
      {
        "name": "API",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/server",
