      {
        "name": "WEB",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/client",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "port": 5173
      }
    ]
  }
  